@HOW_OLD, C_ID
#DIM C_ID
;타겟의 넘버

PRINT (
IF CFLAG:C_ID:31 < 20
    PRINTFORM %UNICODE(0x16A0)%%UNICODE(0x16A2)%%UNICODE(0x16B2)%%UNICODE(0x16B4)%
ELSE
    PRINTFORM {CFLAG:C_ID:31}세
ENDIF
PRINT )

