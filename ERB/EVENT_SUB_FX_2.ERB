    PRINTFORML  [{BUTTON_NUM}] %BUTTON_NAME%
ELSEIF ON_OFF == 0
    SETCOLOR 0x808080
    PRINTPLAINFORM  [{BUTTON_NUM}] %BUTTON_NAME%
