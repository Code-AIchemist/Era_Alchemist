;---------------------------------------
;@CONFIG_CHANGE
;Config 설정
;@MENUBUTTON_2_ON_OFF, ON_OFF, BUTTON_NUM, BUTTON_NAME
                ;ON = 1, OFF = 0
;---------------------------------------
@CONFIG_CHANGE
#DIM DYNAMIC CF_CHANGE, 100
;CONFIG 화면 수정용

WHILE 1
    DRAWLINE
    PRINT  전투화상 스킵 
    PRINTBUTTON @"[수정]",1001
    IF CF_CHANGE:0 == 1
        PRINT - 
        IF FLAG:25 == 1
            CALL MENUBUTTON_2_ON_OFF, 0, 1002,"ON"
        ELSEIF FLAG:25 == 0
            CALL MENUBUTTON_2_ON_OFF, 1, 1002,"ON"
        ENDIF
        PRINT       
        IF FLAG:25 == 1
            CALL MENUBUTTON_2_ON_OFF, 1, 1003,"OFF"
        ELSEIF FLAG:25 == 0
            CALL MENUBUTTON_2_ON_OFF, 0, 1003,"OFF"
        ENDIF
    ENDIF
    PRINTL
;--
    PRINT  모든 네임드 캐릭터 처녀 유무
    PRINTBUTTON @"[수정]",1004
    IF CF_CHANGE:1 == 1
        PRINT - 
        IF FLAG:28 == 1
            CALL MENUBUTTON_2_ON_OFF, 0, 1005,"ON"
        ELSEIF FLAG:28 == 0
            CALL MENUBUTTON_2_ON_OFF, 1, 1005,"ON"
        ENDIF
        PRINT       
        IF FLAG:28 == 1
            CALL MENUBUTTON_2_ON_OFF, 1, 1006,"OFF"
        ELSEIF FLAG:28 == 0
            CALL MENUBUTTON_2_ON_OFF, 0, 1006,"OFF"
        ENDIF
    ENDIF
    PRINTL
;--
    PRINTFORM  랜덤캐릭터 처녀 비율 : {FLAG:26}
    PRINTBUTTON @"[수정]",1007
    IF CF_CHANGE:2 == 1
        PRINTL
        WHILE 1
            PRINT  0부터 10까지의 숫자를 입력 : 
            INPUT
            IF RESULT >= 0 && RESULT < 11
                FLAG:26 = RESULT
                CF_CHANGE:2 = 0
                BREAK
            ELSE
                CLEARLINE 1
            ENDIF
        WEND
    ENDIF
    PRINTL
;--
    PRINTFORM  랜덤캐릭터 A처녀 비율 : {FLAG:27}
    PRINTBUTTON @"[수정]",1008
    IF CF_CHANGE:3 == 1
        PRINTL
        WHILE 1
            PRINT  0부터 10까지의 숫자를 입력 : 
            INPUT
            IF RESULT >= 0 && RESULT < 11
                FLAG:27 = RESULT
                CF_CHANGE:3 = 0
                BREAK
            ELSE
                CLEARLINE 1
            ENDIF
        WEND
    ENDIF
    PRINTL
;--
    PRINT  주간장부 작성하기
    IF 당신의_과거_배경:2 == 2
        PRINTPLAIN [고정]
    ELSE
        PRINTBUTTON @"[수정]",1009
    ENDIF
    IF CF_CHANGE:4 == 1
        PRINT - 
        IF FLAG:29 == 1
            CALL MENUBUTTON_2_ON_OFF, 0, 1010,"ON"
        ELSEIF FLAG:29 == 0
            CALL MENUBUTTON_2_ON_OFF, 1, 1010,"ON"
        ENDIF
        PRINT       
        IF FLAG:29 == 1
            CALL MENUBUTTON_2_ON_OFF, 1, 1011,"OFF"
        ELSEIF FLAG:29 == 0
            CALL MENUBUTTON_2_ON_OFF, 0, 1011,"OFF"
        ENDIF
    ENDIF
    PRINTL
;--
    PRINT  남자의 A조임보기
    PRINTBUTTON @"[수정]",1012
    IF CF_CHANGE:5 == 1
        PRINT - 
        IF FLAG:30 == 1
            CALL MENUBUTTON_2_ON_OFF, 0, 1013,"ON"
        ELSEIF FLAG:30 == 0
            CALL MENUBUTTON_2_ON_OFF, 1, 1013,"ON"
        ENDIF
        PRINT       
        IF FLAG:30 == 1
            CALL MENUBUTTON_2_ON_OFF, 1, 1014,"OFF"
        ELSEIF FLAG:30 == 0
            CALL MENUBUTTON_2_ON_OFF, 0, 1014,"OFF"
        ENDIF
    ENDIF
    PRINTL
;--
    PRINTL
    PRINTL
    PRINTL
    PRINTL [0] 돌아가기
    DRAWLINE
    INPUT
    CLEARLINE 1
    SELECTCASE RESULT
        CASE 1001
            IF CF_CHANGE:0 == 0
                CF_CHANGE:0 = 1
            ELSEIF CF_CHANGE:0 == 1
                CF_CHANGE:0 = 0
            ENDIF
        CASE 1002
            FLAG:25 = 1
        CASE 1003
            FLAG:25 = 0
        CASE 1004
            IF CF_CHANGE:1 == 0
                CF_CHANGE:1 = 1
            ELSEIF CF_CHANGE:1 == 1
                CF_CHANGE:1 = 0
            ENDIF
        CASE 1005
            FLAG:28 = 1
        CASE 1006
            FLAG:28 = 0
        CASE 1007
            CF_CHANGE:2 = 1
        CASE 1008
            CF_CHANGE:3 = 1
        CASE 1009
            IF 당신의_과거_배경:2 != 2
                IF CF_CHANGE:4 == 0
                    CF_CHANGE:4 = 1
                ELSEIF CF_CHANGE:4 == 1
                    CF_CHANGE:4 = 0
                ENDIF
            ENDIF
        CASE 1010
            FLAG:29 = 1
        CASE 1011
            FLAG:29 = 0
            주간매출액:9 = 0
            PRINTW 주간장부를 다시 작성하기 시작해도 저번주 주간매출을 확인할 수 없습니다.
        CASE 1012
            IF CF_CHANGE:5 == 0
                CF_CHANGE:5 = 1
            ELSEIF CF_CHANGE:5 == 1
                CF_CHANGE:5 = 0
            ENDIF
        CASE 1013
            FLAG:30 = 1
        CASE 1014
            FLAG:30 = 0
        CASE 0
            RETURN 0
    ENDSELECT
WEND

