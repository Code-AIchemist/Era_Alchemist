;히로인 정보보기. INPUT명령어 넣지 않기.
;ARG : -1=방문한 히로인, 1=히로인 정보보기
;---------------------------------------
@SHOW_TARGET_STATE, T_CHARA, ARG
#DIM DYNAMIC T_CHARA
;타겟 캐릭터 ID
#DIM DYNAMIC PAGE_STATE
;스테이터스 페이지
#DIM DYNAMIC NUM_FRONT
#DIM DYNAMIC NUM_BACK
;소숫점 앞, 뒤
PAGE_STATE = 111

WHILE 1
    PRINTL
    DRAWLINEFORM %UNICODE(0x2550)%
    PRINTFORM  %CALLNAME:T_CHARA%
    PRINT (
    IF CFLAG:T_CHARA:31 < 20
        PRINTFORM %UNICODE(0x16A0)%%UNICODE(0x16A2)%%UNICODE(0x16B2)%%UNICODE(0x16B4)%
    ELSE
        PRINTFORM {CFLAG:T_CHARA:31}세
    ENDIF
    PRINTL )
    PRINT  
    CALL BASE_BAR(T_CHARA, "체력", 18, "초록")
    PRINT     
    CALL BASE_BAR(T_CHARA, "기력", 18, "파랑","「개행」")

    NUM_FRONT = (CFLAG:T_CHARA:32)/10
    NUM_BACK = (CFLAG:T_CHARA:32)%10
    PRINTFORM  신장:{NUM_FRONT}.{NUM_BACK}cm
    NUM_FRONT = (CFLAG:T_CHARA:33)/10
    NUM_BACK = (CFLAG:T_CHARA:33)%10
    PRINTFORML      체중:{NUM_FRONT}.{NUM_BACK}kg
    IF T_CHARA != 0
        NUM_FRONT = (CFLAG:T_CHARA:34)/10
        NUM_BACK = (CFLAG:T_CHARA:34)%10
        PRINTFORM  B:{NUM_FRONT}.{NUM_BACK}cm

        NUM_FRONT = (CFLAG:T_CHARA:35)/10
        NUM_BACK = (CFLAG:T_CHARA:35)%10
        PRINTFORM      W:{NUM_FRONT}.{NUM_BACK}cm
        
        NUM_FRONT = (CFLAG:T_CHARA:36)/10
        NUM_BACK = (CFLAG:T_CHARA:36)%10
        PRINTFORML      H:{NUM_FRONT}.{NUM_BACK}cm
        
        PRINTL
        PRINTFORML  호감도 : {CFLAG:T_CHARA:1}       신뢰도 : {CFLAG:T_CHARA:2}
    ENDIF

    SELECTCASE PAGE_STATE
        CASE 111
            CALL SHOW_TALENT_STATE, T_CHARA
            CALL SHOW_BATTLE_QUEST_STATE,T_CHARA
            DRAWLINE
            PRINTL  [333] 경험과 보주             [222] 능력과 각인
        CASE 222
            CALL SHOW_ABL_MARK_STATE,T_CHARA
            PRINTL  [111] 소질과 의뢰             [333] 경험과 보주
        CASE 333
            CALL SHOW_EXP_STATE,T_CHARA
            SIF T_CHARA != 0
                CALL SHOW_JUEL_STATE,T_CHARA
            DRAWLINE
            PRINTL  [222] 능력과 각인             [111] 소질과 의뢰
    ENDSELECT
    PRINTL
    
    IF ARG == 1
        PRINTL                [88] 이전 캐릭터
        PRINTL                [22] 다음 캐릭터
        PRINTL
        PRINTL  [999] 돌아간다

        INPUT
        SELECTCASE RESULT
            CASE 88
                IF T_CHARA == 0
                    T_CHARA = CHARANUM - 1
                ELSE
                    T_CHARA = ((T_CHARA-1)%CHARANUM)
                ENDIF
            CASE 22
                T_CHARA = ((T_CHARA+1)%CHARANUM)
                SIF T_CHARA == CHARANUM
                    T_CHARA = 1
            CASE 999
                RETURN 0
            CASE 111, 222, 333
                PAGE_STATE = RESULT
        ENDSELECT
    ELSEIF ARG == -1
        PRINTL  [99] 꺼져!(내쫓기)
        PRINTL
        PRINTL  [1] 다른 것 같은데..
        PRINTL  [0] 맞아. 이런 모습이야.
        WHILE 1
            INPUT
            SELECTCASE RESULT
                CASE 99, 1, 0
                    RETURN RESULT
                ;캐릭터 결정판단
                CASE 111, 222, 333
                    PAGE_STATE = RESULT
                    BREAK
                ;페이지 넘기기
                CASEELSE
                    BREAK
            ENDSELECT
        WEND
    ELSE
        PRINTW 인수 ARG 오류.
    ENDIF
WEND



