        D:10 = 1
        CALL EVENT_MAKE_SOMETHING, 1, RESULT, 6003, 1
    CASE 202
        D = 802
        D:10 = 1
        CALL EVENT_MAKE_SOMETHING, 1, RESULT, 6003, 1
    CASE 205
        D = 803
        D:10 = 1
        CALL EVENT_MAKE_SOMETHING, 1, RESULT, 6003, 1
