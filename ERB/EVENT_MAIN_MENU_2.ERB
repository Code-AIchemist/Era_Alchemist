;---------------------------------------
;Config 설정
;CF_CHANGE : CONFIG 화면 수정용
;---------------------------------------
@CONFIG_CHANGE
REPEAT 100
    CF_CHANGE:COUNT = 0
REND
$PRINT_LOOP

DRAWLINE
PRINT  전투화상 스킵 
PRINTBUTTON @"[수정]",1001
IF CF_CHANGE:0 == 1
    PRINT - 
    IF FLAG:25 == 1
        CALL MENUBUTTON_2_ON_OFF, 0, 1002,"ON"
    ELSEIF FLAG:25 == 0
        CALL MENUBUTTON_2_ON_OFF, 1, 1002,"ON"
    ENDIF
    PRINT       
    IF FLAG:25 == 1
        CALL MENUBUTTON_2_ON_OFF, 1, 1003,"OFF"
    ELSEIF FLAG:25 == 0
        CALL MENUBUTTON_2_ON_OFF, 0, 1003,"OFF"
    ENDIF
ENDIF
PRINTL
;--
PRINT  모든 네임드 캐릭터 처녀 유무
PRINTBUTTON @"[수정]",1004
IF CF_CHANGE:1 == 1
    PRINT - 
    IF FLAG:28 == 1
        CALL MENUBUTTON_2_ON_OFF, 0, 1005,"ON"
    ELSEIF FLAG:28 == 0
        CALL MENUBUTTON_2_ON_OFF, 1, 1005,"ON"
    ENDIF
    PRINT       
    IF FLAG:28 == 1
        CALL MENUBUTTON_2_ON_OFF, 1, 1006,"OFF"
    ELSEIF FLAG:28 == 0
        CALL MENUBUTTON_2_ON_OFF, 0, 1006,"OFF"
    ENDIF
ENDIF
PRINTL
;--
PRINTFORM  랜덤캐릭터 처녀 비율 : {FLAG:26}
PRINTBUTTON @"[수정]",1007
IF CF_CHANGE:2 == 1
    PRINTL
    WHILE 1
        PRINT  0부터 10까지의 숫자를 입력 : 
        INPUT
        IF RESULT >= 0 && RESULT < 11
            FLAG:26 = RESULT
            CF_CHANGE:2 = 0
            BREAK
        ELSE
            CLEARLINE 1
        ENDIF
    WEND
ENDIF
PRINTL
;--
PRINTFORM  랜덤캐릭터 A처녀 비율 : {FLAG:27}
PRINTBUTTON @"[수정]",1008
IF CF_CHANGE:3 == 1
    PRINTL
    WHILE 1
        PRINT  0부터 10까지의 숫자를 입력 : 
        INPUT
        IF RESULT >= 0 && RESULT < 11
            FLAG:27 = RESULT
            CF_CHANGE:3 = 0
            BREAK
        ELSE
            CLEARLINE 1
        ENDIF
    WEND
ENDIF
PRINTL
;--

PRINTL
PRINTL
PRINTL
PRINTL [0] 돌아가기
DRAWLINE

INPUT
CLEARLINE 1
SELECTCASE RESULT
    CASE 1001
        IF CF_CHANGE:0 == 0
            CF_CHANGE:0 = 1
        ELSEIF CF_CHANGE:0 == 1
            CF_CHANGE:0 = 0
        ENDIF
    CASE 1002
        FLAG:25 = 1
    CASE 1003
        FLAG:25 = 0

    CASE 1004
        IF CF_CHANGE:1 == 0
            CF_CHANGE:1 = 1
        ELSEIF CF_CHANGE:1 == 1
            CF_CHANGE:1 = 0
        ENDIF
    CASE 1005
        FLAG:28 = 1
    CASE 1006
        FLAG:28 = 0

    CASE 1007
        CF_CHANGE:2 = 1
    CASE 1008
        CF_CHANGE:3 = 1
    

    CASE 0
        RETURN 0
ENDSELECT
GOTO PRINT_LOOP

