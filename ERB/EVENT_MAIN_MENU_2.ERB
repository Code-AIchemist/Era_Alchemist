@Q_WHO_SHOW
#DIM DYNAMIC CHARA_JOB_NUM
;캐릭터 직업번호
#DIM DYNAMIC FOR_NUM
;FOR 돌리기용 변수

PRINTL
DRAWLINE
PRINTL
PRINTFORML  [0] 당신
REPEAT CHARANUM - 1
    ;선택번호
    PRINTFORM  [{COUNT+1}] 
    ;상태
    SELECTCASE CFLAG:(COUNT+1):404
        CASE 0
            PRINTFORM 휴식중  
        CASE 1
            PRINTFORM 외출  
        CASE 2
            PRINTFORM 던전  
        CASE 3
            PRINTFORM 호출가능  
        CASE 4
            PRINTFORM 감금됨  
    ENDSELECT
    ;이름
    PRINTFORM %CALLNAME:(COUNT+1),3% 
    ;직업
    CHARA_JOB_NUM = CFLAG:(COUNT+1):13
    PRINTFORM %TALENTNAME:CHARA_JOB_NUM%  -  
    ;용병등급
    SELECTCASE TALENT:(COUNT+1):806
        CASE 1
            PRINTFORM 초보자
        CASE 2
            PRINTFORM F급 용병
        CASE 3
            PRINTFORM E급 용병
        CASE 4
            PRINTFORM D급 용병
        CASE 5
            PRINTFORM C급 용병
        CASE 6
            PRINTFORM B급 용병
        CASE 7
            PRINTFORM A급 용병
        CASE 8
            PRINTFORM S급 용병
    ENDSELECT
    PRINT   
    CALL BASE_BAR(MASTER, "체력", 10, "초록")
    PRINT    
    CALL BASE_BAR(MASTER, "기력", 10, "파랑")
    
    ;함락여부
    FOR FOR_NUM,13,(18+1)
        IF TALENT:(COUNT+1):FOR_NUM == 1
            PRINTFORML <%TALENTNAME:FOR_NUM%>
            BREAK
        ELSEIF FOR_NUM == 18
            PRINTFORML <미함락>
        ENDIF
    NEXT
REND
PRINTL
PRINTL
PRINTL [999] 돌아가기
WHILE 1
    INPUT
    IF RESULT == 999
    ;돌아가기
        RETURN 0
    ELSEIF RESULT >= 0 && RESULT <= CHARANUM
    ;캐릭터를 골랐을경우
        CALL SHOW_TARGET_STATE, RESULT, 1
        BREAK
    ELSE
    ;잘못 선택
        PRINTW  다시 선택하여 주십시오.
    ENDIF
WEND




