;외출하기
;---------------------------------------
@GOING_OUT_SOMEWHERE
#DIM DYNAMIC RESULT_A

$INPUT_LOOP_A

;출력
DRAWLINE
PRINTL
PRINTFORML  %UNICODE(0x25B6)% 어디로 갈까?....
CALL MENUBUTTON_ON_OFF,1,101,"시장"
CALL MENUBUTTON_ON_OFF,0,102,"대장간(미구현)"
CALL MENUBUTTON_ON_OFF,0,103,"길드(미구현)"
CALL MENUBUTTON_ON_OFF,1,104,"훈련소"
PRINTL
PRINTL
PRINTL [0] 돌아가기
DRAWLINE
PRINTL

;입력
INPUT
RESULT_A = RESULT
SELECTCASE RESULT_A
    CASE 101
    ;시장
        CALL GOING_MARKET
    CASE 104
    ;훈련소 - 500CP
        $INPUT_LOOP_B
        PRINTFORML 입장시 %MONEYSTR(500)%를 소모합니다. 입장하시겠습니까?
        PRINTL [0] 예       [1] 아니오
        
        INPUT

        IF RESULT == 0 && MONEY >= 500
            CALL GOING_TRAINING_CAMP
        ELSEIF RESULT == 1
            GOTO INPUT_LOOP_A
        ELSEIF MONEY < 500
            PRINTW 손님, 입장료는 내셔야죠?
            GOTO INPUT_LOOP_A
        ELSE
            PRINTW 다시 입력하세요.
            GOTO INPUT_LOOP_B
        ENDIF

    CASE 0
    ;나가기
        RETURN 0
    CASEELSE
        GOTO INPUT_LOOP_A
ENDSELECT

;---------------------------------------
;@Q_WHO_SHOW
;누구 정보를 볼지 물어보는 함수
;캐릭터 선택. 0 - 자신
;#DIM DYNAMIC CHARA_JOB_NUM
;캐릭터 직업번호
;#DIM DYNAMIC FOR_NUM
;FOR 돌리기용 변수
;#DIM DYNAMIC Q_FALL_DOWN
;함락 여부
;---------------------------------------
@Q_WHO_SHOW
#DIM DYNAMIC CHARA_JOB_NUM
;캐릭터 직업번호
#DIM DYNAMIC FOR_NUM
;FOR 돌리기용 변수

PRINTL
DRAWLINE
PRINTL
PRINTFORML  [0] 당신
REPEAT CHARANUM - 1
    ;선택번호
    PRINTFORM  [{COUNT+1}] 
    ;상태
    SELECTCASE CFLAG:(COUNT+1):404
        CASE 0
            PRINTFORM 휴식중  
        CASE 1
            PRINTFORM 외출  
        CASE 2
            PRINTFORM 던전  
        CASE 3
            PRINTFORM 호출가능  
        CASE 4
            PRINTFORM 감금됨  
    ENDSELECT
    ;이름
    PRINTFORM %CALLNAME:(COUNT+1),3% 
    ;직업
    CHARA_JOB_NUM = CFLAG:(COUNT+1):13
    PRINTFORM %TALENTNAME:CHARA_JOB_NUM%  -  
    ;용병등급
    SELECTCASE TALENT:(COUNT+1):806
        CASE 1
            PRINTFORM 초보자
        CASE 2
            PRINTFORM F급 용병
        CASE 3
            PRINTFORM E급 용병
        CASE 4
            PRINTFORM D급 용병
        CASE 5
            PRINTFORM C급 용병
        CASE 6
            PRINTFORM B급 용병
        CASE 7
            PRINTFORM A급 용병
        CASE 8
            PRINTFORM S급 용병
    ENDSELECT
    PRINT   
    CALL BASE_BAR((COUNT+1), "체력", 10, "초록")
    PRINT    
    CALL BASE_BAR((COUNT+1), "기력", 10, "파랑")
    
    ;함락여부
    FOR FOR_NUM,13,(18+1)
        IF TALENT:(COUNT+1):FOR_NUM == 1
            PRINTFORML <%TALENTNAME:FOR_NUM%>
            BREAK
        ELSEIF FOR_NUM == 18
            PRINTFORML <미함락>
        ENDIF
    NEXT
REND
PRINTL
PRINTL
PRINTL [999] 돌아가기
WHILE 1
    INPUT
    IF RESULT == 999
    ;돌아가기
        RETURN 0
    ELSEIF RESULT >= 0 && RESULT <= CHARANUM
    ;캐릭터를 골랐을 경우
        CALL SHOW_TARGET_STATE, RESULT, 1
        BREAK
    ELSE
    ;잘못 선택
        PRINTW  다시 선택하여 주십시오.
    ENDIF
WEND




