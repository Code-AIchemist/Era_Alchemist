        ;요리 아이템들 초기화
        장착_요리:1 = 0
        DECORATE_ITEM_LV:UNEQUIP_ITEM = 0

    CASE 0
        장착_외관:2 = 0
        DECORATE_ITEM_LV:UNEQUIP_ITEM = 0
    CASE 1
        장착_외관:0 = 0
        DECORATE_ITEM_LV:UNEQUIP_ITEM = 0
    CASE 2
        장착_외관:1 = 0
        DECORATE_ITEM_LV:UNEQUIP_ITEM = 0

    CASE 3
        장착_객실:2 = 0
        DECORATE_ITEM_LV:UNEQUIP_ITEM = 0
    CASE 4
        장착_객실:0 = 0
        DECORATE_ITEM_LV:UNEQUIP_ITEM = 0
    CASE 5
        장착_객실:1 = 0
        DECORATE_ITEM_LV:UNEQUIP_ITEM = 0

    CASE 6
        장착_소문:2 = 0
        DECORATE_ITEM_LV:UNEQUIP_ITEM = 0
    CASE 7
        장착_소문:0 = 0
        DECORATE_ITEM_LV:UNEQUIP_ITEM = 0
    CASE 8
        장착_소문:1 = 0
        DECORATE_ITEM_LV:UNEQUIP_ITEM = 0
ENDSELECT

