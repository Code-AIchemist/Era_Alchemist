SELECTCASE UNEQUIP_ITEM
    CASE 9
        ;요리 아이템들 초기화
        장착_요리:2 = 0
        DECORATE_ITEM_LV:UNEQUIP_ITEM = 0
    CASE 10
        ;요리 아이템들 초기화
        장착_요리:0 = 0
        DECORATE_ITEM_LV:UNEQUIP_ITEM = 0
